    <!-- Copyright -->
    <div class="footer-copyright text-center py-3">Â© 2019 <%= t('program.cpy') %>:
      <a href="<%= t('program.url') %>"><%= t('program.name') %></a>
    </div>
    <!-- Copyright -->

  </footer>
<script>

</script>
</html>
