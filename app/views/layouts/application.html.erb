<!DOCTYPE html>
<html>
  <head>
     <title><%= t('program.name') %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <nav  class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="/"><img src="<%= image_url("raw_logo.png") %>" width="150px" style="margin-left:45%;" id="logo"/></a><div class="form-inline">
    <div style="padding-right: 10px;">
      <button onclick="$('body').toggleClass('bgDark')" class="btn btn-outline-primary" >
        <%= t('program.darkmode') %>
      </button>
    </div>
      <% if user_signed_in? %>
<%= link_to "My Account", "/home/myaccount", class: "btn btn-outline-primary", role: "button"%>&ensp;
<%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-outline-primary", role: "button" %>
        <%else %>
        <a class="btn btn-outline-primary" href="users/sign_in" role="button">
        <%= t('program.login') %>
         </a>

      <div style="padding-left: 10px;">
        <a class="btn btn-outline-primary" href="users/sign_up" role="button">
          <%= t('program.signup') %>
        </a>
      </div>
            <% end %>

    </div>
  </nav>
  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "Browse", "/trips/", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Post", "/trips/new", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Contact", "/contact", class: "nav-link" %>
        </li>

      </ul>

    </div>
  </nav>

  <div style="margin:2%;">
    <% if !notice.nil? %>
      <div class="alert alert-warning" role="alert">
        <strong><%= t('program.update') %>!</strong> <%= notice %>.
      </div>
    <p class="notice"></p>
      <% end %>
    <% if !alert.nil? %>
      <div class="alert alert-warning" role="alert">
        <strong><%= t('program.warning') %>!</strong> <%= alert %>.
      </div>
    <% end %>
  <%= yield %>
  </div>

  </body>

